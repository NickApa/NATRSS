@model SpillTracker.Models.Calculation

<div style="text-align: center;">
    <h1>Calculation</h1>
    <p id="chemName">@Model.chemName</p>
    <span>Reportable Quantity: </span><span id="chemRW">@Model.reportableQuantity</span><span> lbs.</span> 
    <div hidden="true">
    @if(Model.cercla == true) 
    {
        <p id="cercla">CERCLA</p>
    }
    else 
    {
        <span id="cercla"> </span>
    }
    </div>
    <br>
    <br>
    <div style="text-align: center;">
        
        <div>
            <label for="">Amount Released in lbs: </label> 
            <input type="number" min="0" required id="amountReleased" required>
        </div>
        <br>
        <div>
            <label for="">Time of Release in hours: </label>
            <input type="number" min="0" required id="timeReleased" required>
        </div> 
        <br>
        <div>
            <label for="">Total percent of Mixture: </label>
            <input type="number" min="0" max="100" required id="percentReleased" required>
        </div>
        <br>
        <button type="submit" id="calcButton"  class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">Calculate</button>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" id="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="background-color: springgreen;" id="headergood"></h5>
        <h5 style="background-color: tomato;" class="modal-title" id="headerbad"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <p id="timeTillReport"></p>
            <p id="dayRelease"></p>
      </div>
    </div>
  </div>
</div>




<br>
<br>

<div style="text-align: center;" id="stats">
    <p id="totalReleased"></p>
    <p id="releasePerHour"></p>

</div>

<div style="text-align: center;">
    <a style="text-align: center;" type="submit" asp-controller="Calculation" asp-action="Index">Back to Search</a>
</div>



@section Scripts {
    <script src="/js/calculation.js"></script>
}