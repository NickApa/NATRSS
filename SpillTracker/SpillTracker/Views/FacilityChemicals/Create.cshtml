@model SpillTracker.Models.FacilityChemical

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>FacilityChemical</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Concentration" class="control-label"></label>
                <input asp-for="Concentration" class="form-control" />
                <span asp-validation-for="Concentration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChemicalTemperature" class="control-label"></label>
                <input asp-for="ChemicalTemperature" class="form-control" />
                <span asp-validation-for="ChemicalTemperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChemicalTemperatureUnits" class="control-label"></label>
                <input asp-for="ChemicalTemperatureUnits" class="form-control" />
                <span asp-validation-for="ChemicalTemperatureUnits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChemicalStateId" class="control-label"></label>
                <select asp-for="ChemicalStateId" class ="form-control" asp-items="ViewBag.ChemicalStateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChemicalId" class="control-label"></label>
                <select asp-for="ChemicalId" class ="form-control" asp-items="ViewBag.ChemicalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FacilityId" class="control-label"></label>
                <select asp-for="FacilityId" class ="form-control" asp-items="ViewBag.FacilityId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
